    <div class="wrapper">

      <div class="row">
        <div class="large-12 columns">
          <h1>Welcome to Foundation ({_"translated"})</h1>
        </div>
      </div>

      <div class="row">
        <nav class="top-bar" data-topbar role="navigation">
          <ul class="title-area">
            <li class="name">
              <h1><a href="{$basePath}">My Site</a></h1>
            </li>
             <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
            <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
          </ul>

          <section class="top-bar-section">
            <!-- Right Nav Section -->
            <ul class="right">
              <li class="active"><a href="#">Right Button Active</a></li>
              <li class="has-dropdown">
                <a href="#">Right Button Dropdown</a>
                <ul class="dropdown">
                  <li><a href="#">First link in dropdown</a></li>
                  <li class="active"><a href="#">Active link in dropdown</a></li>
                </ul>
              </li>
            </ul>

            <!-- Left Nav Section -->
            <ul class="left">
              <li><a href="#">Left Nav Button</a></li>
            </ul>
          </section>
        </nav>
      </div>

      <div n:foreach="$flashes as $flash" class="flash {$flash->type}">{$flash->message}</div>

      {include content}

      <div class="push"></div>

    </div>

    <div class="row">
      <footer>2015 &copy; <a href="http://www.flipcom.cz" alt="Flipcom - IT Advisory">Flipcom - IT Advisory</footer>
    </div>

    {block scripts}
      <script type="text/javascript" src="{$basePath}/js/vendor/jquery.js"></script>
      <script type="text/javascript" src="{$basePath}/js/vendor/jquery.easings.min.js"></script>
      <script type="text/javascript" src="{$basePath}/js/vendor/jquery.slimscroll.min.js"></script>
      <script type="text/javascript" src="{$basePath}/js/vendor/jquery.fullPage.min.js"></script>
      <script type="text/javascript" src="{$basePath}/js/foundation.min.js"></script>

      <script type="text/javascript" src="{$basePath}/js/netteForms.js"></script>
      <script type="text/javascript" src="{$basePath}/js/main.js"></script>
      <script type="text/javascript">

        $(document).foundation();

        // anchor jscript scroll
        $('a[href^=#]').click(function(i, el) {
          var anchorId = $(this).attr('href').substr(1),
            body = $("body");
          body.animate({
            scrollTop: $('#' + anchorId).offset().top
          }, 400, 'swing', function() { /*callback*/ });
          return false;
        });

